<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar_Restaurante">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText7"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_action_user"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/txtApellidoProp"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_action_user"
                android:ems="10"
                android:hint="Apellido"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText7" />

            <EditText
                android:id="@+id/txtRestaurante"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:drawableLeft="@drawable/ic_action_home"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Nombre restaurante"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtApellidoProp" />

            <EditText
                android:id="@+id/txtTelefonoProp"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_action_phone"
                android:ems="10"
                android:hint="Telefono"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRestaurante" />

            <EditText
                android:id="@+id/txtCorroeProp"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_action_correo"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTelefonoProp" />

            <EditText
                android:id="@+id/txtPassPro"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:drawableLeft="@drawable/ic_action_pass"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCorroeProp" />

            <ImageView
                android:id="@+id/imarest"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:src="@android:drawable/ic_menu_camera" />

            <Button
                android:id="@+id/btnRegistarProp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Registrar Propietario"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/txtPassPro" />


            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="29dp"
                android:background="?android:attr/listDivider"
                android:foreground="@android:color/background_light" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>